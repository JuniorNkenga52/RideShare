<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/blacltext" />

    <LinearLayout
        android:id="@+id/admin_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <View
            android:id="@+id/txtview"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/blacltext" />

        <TextView
            android:id="@+id/item_fname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:gravity="center_vertical"
            android:padding="@dimen/_1sdp"
            android:text="pattrik Harris"
            android:textAllCaps="false"
            android:textColor="@color/blacltext"
            android:textSize="@dimen/_10sdp" />

        <View
            android:id="@+id/txtview1"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/blacltext" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:gravity="center"
            android:padding="@dimen/_1sdp">

            <TextView
                android:id="@+id/item_lname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/_1sdp"
                android:text="@string/user_lname"
                android:textAllCaps="false"
                android:textColor="@color/blacltext"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>

        <View
            android:id="@+id/txtview2"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/blacltext" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:gravity="center"
            android:padding="@dimen/_1sdp">

            <TextView
                android:id="@+id/item_urole"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/_1sdp"
                android:text="@string/user_role"
                android:textAllCaps="false"
                android:textColor="@color/blacltext"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>


        <View
            android:id="@+id/txtview3"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/blacltext" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:padding="@dimen/_1sdp">

            <CheckBox
                android:id="@+id/item_aprove_req"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:buttonTint="@color/blacltext" />
        </LinearLayout>


        <View
            android:id="@+id/txtview4"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/blacltext" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:gravity="center"
            android:padding="@dimen/_1sdp">

            <CheckBox
                android:id="@+id/item_disable"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:buttonTint="@color/blacltext" />
        </LinearLayout>


        <View
            android:id="@+id/txtview5"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/blacltext" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:padding="@dimen/_1sdp">

            <CheckBox
                android:id="@+id/item_aprove_priviledge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/blacltext"
                android:padding="@dimen/_1sdp" />
        </LinearLayout>


        <View
            android:id="@+id/txtview6"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/blacltext" />

    </LinearLayout>

    <View
        android:id="@+id/admin_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/admin_layout"
        android:background="@color/blacltext" />
</RelativeLayout>
