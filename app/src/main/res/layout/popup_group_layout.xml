<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/create_grp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/TextLabel1"
        app:hintTextAppearance="@style/TextLabelsize">

        <EditText
            android:id="@+id/edt_group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/create_group_text"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_14sdp" />

    </android.support.design.widget.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_grp"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_create"
            android:textAllCaps="false"
            android:background="@drawable/btn_login"/>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_cancle"
            android:textAllCaps="false"
            android:layout_marginLeft="@dimen/_2sdp"
            android:background="@drawable/btn_login"/>
    </LinearLayout>


</RelativeLayout>
