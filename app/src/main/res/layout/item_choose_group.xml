<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/item_choose_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/squar_re"
        app:hintTextAppearance="@style/TextLabelsize">

        <TextView
            android:id="@+id/txt_choose_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/choose_group_text"
            android:padding="@dimen/_8sdp"
            android:textAlignment="textStart"
            android:textColor="@color/loginbtn"
            android:textSize="@dimen/_14sdp"
            tools:ignore="RtlCompat" />

    </android.support.design.widget.TextInputLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/item_choose_group"
        android:background="@color/loginbtn" />
</RelativeLayout>
