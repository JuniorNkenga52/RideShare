<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_chat_you"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chat_you"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_3sdp"
            android:paddingLeft="@dimen/_16sdp"
            android:paddingRight="@dimen/_3sdp"
            android:paddingTop="@dimen/_3sdp">

            <TextView
                android:id="@+id/txt_msg_content_you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/BlackColor"
                android:textSize="@dimen/_12sdp"/>

            <com.app.rideshare.widget.SquareImageView
                android:id="@+id/img_msg_media_you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txt_msg_time_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="00:00 PM"
            android:textColor="@color/GrayDarkColor"
            android:textSize="@dimen/_10sdp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_chat_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <TextView
            android:id="@+id/txt_msg_time_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="@dimen/_5sdp"
            android:text="00:00 PM"
            android:textColor="@color/GrayDarkColor"
            android:textSize="@dimen/_10sdp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chat_me"
            android:gravity="right"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_3sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_16sdp"
            android:paddingTop="@dimen/_3sdp">

            <TextView
                android:id="@+id/txt_msg_content_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/BlackColor"
                android:textSize="@dimen/_12sdp"/>

            <com.app.rideshare.widget.SquareImageView
                android:id="@+id/img_msg_media_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>