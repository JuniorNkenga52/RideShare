<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mllCustomDialogError"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_4sdp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="@dimen/_3sdp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.app.rideWhiz.widget.TextViewSemiBold
                android:id="@+id/ride_type_details_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_below="@+id/passwordWrapper"
                android:background="@drawable/btn_login"
                android:gravity="center"
                android:lineSpacingExtra="1.2dp"
                android:text="@string/driver_details"
                android:textColor="@color/blacltext"
                android:textSize="@dimen/_16sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/_8sdp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2">

                    <ImageView
                        android:id="@+id/userImage"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/ic_car_dialog" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="0.3"
                    android:orientation="vertical">

                    <com.app.rideWhiz.widget.TextViewRegular
                        android:id="@+id/name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dhaiyur "
                        android:textColor="@color/blacltext"
                        android:textSize="@dimen/_12sdp" />

                    <com.app.rideWhiz.widget.TextViewRegular
                        android:id="@+id/vahical_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:text="Vehicle"
                        android:textColor="@color/blacltext"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.app.rideWhiz.widget.TextViewBold
                        android:id="@+id/txt_view_reviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/view_reviews"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />
                   <!-- <com.iarcuschin.simpleratingbar.SimpleRatingBar
                        android:id="@+id/driver_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srb_borderColor="@color/forgot_signup_blue_color"
                        app:srb_fillColor="@color/forgot_signup_blue_color"
                        app:srb_numberOfStars="5"
                        app:srb_rating="3"
                        app:srb_starSize="30dp"
                        app:srb_stepSize="0.5"
                        android:visibility="gone"/>-->

                    <!--<RatingBar
                        android:id="@+id/ride_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:numStars="5"
                        android:stepSize="1"
                        android:theme="@style/RatingBar" />-->

                </LinearLayout>
            </LinearLayout>

            <com.app.rideWhiz.widget.TextViewRegular
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/_8sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_pin_dialog" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="0.2"
                    android:orientation="vertical">

                    <com.app.rideWhiz.widget.TextViewBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:text="Current Location"
                        android:textColor="@color/blacltext"
                        android:textSize="@dimen/_12sdp" />

                    <com.app.rideWhiz.widget.TextViewRegular
                        android:id="@+id/address_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:text="Dhaiyur"
                        android:textColor="@color/blacltext"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>


            </LinearLayout>

            <com.app.rideWhiz.widget.TextViewRegular
                android:id="@+id/txt_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:id="@+id/layout_driver_destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/_8sdp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_pin_dialog" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="0.2"
                    android:orientation="vertical">

                    <com.app.rideWhiz.widget.TextViewBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:text="Destination Location"
                        android:textColor="@color/blacltext"
                        android:textSize="@dimen/_12sdp" />

                    <com.app.rideWhiz.widget.TextViewRegular
                        android:id="@+id/destination_address_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:maxLines="3"
                        android:text="Dhaiyur"
                        android:textColor="@color/blacltext"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>


            </LinearLayout>

            <com.app.rideWhiz.widget.TextViewRegular
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:id="@+id/ride_other_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_8sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_clock_dialog" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp">

                        <ProgressBar
                            android:id="@+id/driver_distance_progress"
                            style="?android:attr/progressBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true" />

                        <com.app.rideWhiz.widget.TextViewRegular
                            android:id="@+id/driver_distance_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/blacltext"
                            android:textSize="@dimen/_12sdp" />

                    </RelativeLayout>

                    <com.app.rideWhiz.widget.TextViewRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="CAB Distance"
                        android:textColor="@color/blacltext"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_person_dialog" />

                    <com.app.rideWhiz.widget.TextViewRegular
                        android:id="@+id/txt_maxPerson"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:gravity="center"
                        android:text="05"
                        android:textColor="@color/blacltext"
                        android:textSize="@dimen/_12sdp" />

                    <com.app.rideWhiz.widget.TextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Max Person"
                        android:textColor="@color/blacltext"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/layout_persons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.app.rideWhiz.widget.TextViewRegular
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/colorAccent" />

                <com.app.rideWhiz.widget.TextViewRegular
                    android:id="@+id/txt_select_persons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_8sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:text="@string/select_max_person"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_select_persons"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/_8sdp">

                    <com.app.rideWhiz.widget.RadioButtonRegular
                        android:id="@+id/radioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="One"
                        android:textSize="@dimen/_14sdp" />

                    <com.app.rideWhiz.widget.RadioButtonRegular
                        android:id="@+id/radioButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="Two"
                        android:textSize="@dimen/_14sdp" />

                    <com.app.rideWhiz.widget.RadioButtonRegular
                        android:id="@+id/radioButton3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="Three"
                        android:textSize="@dimen/_14sdp" />

                    <com.app.rideWhiz.widget.RadioButtonRegular
                        android:id="@+id/radioButton4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="Four"
                        android:textSize="@dimen/_14sdp" />
                </RadioGroup>
            </RelativeLayout>


            <com.app.rideWhiz.widget.TextViewRegular
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="#ececec" />

            <LinearLayout
                android:id="@+id/rider_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp"
                android:visibility="gone">

                <com.app.rideWhiz.widget.TextViewRegular
                    android:id="@+id/cancel_ride_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_25sdp"
                    android:gravity="center"
                    android:text="Cancel"
                    android:textColor="@color/blacltext"
                    android:textSize="@dimen/_12sdp" />

                <com.app.rideWhiz.widget.TextViewRegular
                    android:id="@+id/get_ride_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:gravity="center"
                    android:text="Get Ride"
                    android:textColor="@color/blacltext"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/driver_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp"
                android:visibility="visible">

                <com.app.rideWhiz.widget.TextViewRegular
                    android:id="@+id/cancel_driver_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="OK"
                    android:textColor="@color/blacltext"
                    android:textSize="@dimen/_14sdp" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
