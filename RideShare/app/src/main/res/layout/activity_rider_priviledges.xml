<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/admin_fun_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:titleTextColor="@color/colorAccent"
        app:navigationIcon="@drawable/ic_back"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="User Info" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp"
            card_view:ignore="MissingConstraints"
            card_view:layout_editor_absoluteX="300dp"
            card_view:layout_editor_absoluteY="0dp">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="@dimen/_3sdp"
                card_view:cardUseCompatPadding="true">

                <com.app.rideshare.widget.TextViewRegular
                    android:id="@+id/item_rider_ap_req"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_17sdp"
                    android:text="@string/approve_req"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_14sdp" />

                <CheckBox
                    android:id="@+id/item_rider_req"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:padding="@dimen/_7sdp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_user_role"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="@dimen/_3sdp"

                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/choose_group_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/squar_re"
                    android:orientation="horizontal">

                    <com.app.rideshare.widget.TextViewRegular
                        android:id="@+id/vehicle_model"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_17sdp"
                        android:text="@string/vehicle_model"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_14sdp" />

                    <com.app.rideshare.widget.EditTextRegular
                        android:id="@+id/item_vehicle_model"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="bottom"
                        android:hint="@string/vehicle_model"
                        android:textAllCaps="false"
                        android:textColor="@color/loginbtn"
                        android:textSize="@dimen/_14sdp"
                        android:theme="@style/TextLabel1" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="@dimen/_3sdp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/squar_re"
                    android:orientation="horizontal">

                    <com.app.rideshare.widget.TextViewRegular
                        android:id="@+id/vehicle_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_17sdp"
                        android:text="@string/vehicle_type"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_14sdp" />

                    <com.app.rideshare.widget.EditTextRegular
                        android:id="@+id/item_vehicle_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="bottom"
                        android:hint="@string/vehicle_type"
                        android:textAllCaps="false"
                        android:textColor="@color/loginbtn"
                        android:textSize="@dimen/_14sdp"
                        android:theme="@style/TextLabel1" />
                </LinearLayout>


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="@dimen/_3sdp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/squar_re"
                    android:orientation="horizontal">

                    <com.app.rideshare.widget.TextViewRegular
                        android:id="@+id/vehicle_passengers"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_17sdp"
                        android:text="@string/vehicle_passengers"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_14sdp" />

                    <com.app.rideshare.widget.EditTextRegular
                        android:id="@+id/item_vehicle_passengers"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="bottom"
                        android:hint="@string/vehicle_passengers"

                        android:textAllCaps="false"
                        android:textColor="@color/loginbtn"
                        android:textSize="@dimen/_14sdp"
                        android:theme="@style/TextLabel1"
                        card_view:ignore="RtlCompat" />
                </LinearLayout>

            </android.support.v7.widget.CardView>


            <Button
                android:id="@+id/btn_rider_submit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/loginbtn"
                android:text="@string/btn_submit" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>
