<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/admin_fun_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:titleTextColor="@color/colorAccent"
        app:navigationIcon="@drawable/ic_back"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="User Info" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp"
            card_view:ignore="MissingConstraints"
            card_view:layout_editor_absoluteX="300dp"
            card_view:layout_editor_absoluteY="0dp">


            <android.support.v7.widget.CardView
                android:id="@+id/google_cv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="@dimen/_3sdp"
                card_view:cardUseCompatPadding="true">

                <com.app.rideshare.widget.TextViewRegular
                    android:id="@+id/username_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_12sdp"
                    android:text="@string/user_name"
                    android:textColor="@color/blacltext"
                    android:textSize="@dimen/_14sdp" />

                <com.app.rideshare.widget.TextViewRegular
                    android:id="@+id/item_user_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_17sdp"
                    android:text="@string/user_name"
                    android:textAlignment="textEnd"
                    android:textColor="@color/blacltext"
                    android:textSize="@dimen/_14sdp"
                    card_view:ignore="RtlCompat" />
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/card_last_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="@dimen/_3sdp"
                card_view:cardUseCompatPadding="true">

                <com.app.rideshare.widget.TextViewRegular
                    android:id="@+id/item_user_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_17sdp"
                    android:text="@string/user_lname"
                    android:textColor="@color/blacltext"
                    android:textSize="@dimen/_14sdp" />

                <com.app.rideshare.widget.TextViewRegular
                    android:id="@+id/item_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_17sdp"
                    android:text="@string/user_name"
                    android:textAlignment="textEnd"
                    android:textColor="@color/blacltext"
                    android:textSize="@dimen/_14sdp"
                    card_view:ignore="RtlCompat" />
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/card_user_role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="@dimen/_3sdp"
                card_view:cardUseCompatPadding="true">

                <com.app.rideshare.widget.TextViewRegular
                    android:id="@+id/item_user_role"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_17sdp"
                    android:text="@string/user_role"
                    android:textColor="@color/blacltext"
                    android:textSize="@dimen/_14sdp" />

                <com.app.rideshare.widget.TextViewRegular
                    android:id="@+id/item_role"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_17sdp"
                    android:text="User"
                    android:textAlignment="textEnd"
                    android:textColor="@color/blacltext"
                    android:textSize="@dimen/_14sdp"
                    card_view:ignore="RtlCompat" />
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/card_user_ap_req"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="@dimen/_3sdp"
                card_view:cardUseCompatPadding="true">

                <com.app.rideshare.widget.TextViewRegular
                    android:id="@+id/item_user_ap_req"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_17sdp"
                    android:text="@string/approve_req"
                    android:textColor="@color/blacltext"
                    android:textSize="@dimen/_14sdp" />

                <CheckBox
                    android:id="@+id/item_driver_req"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:padding="@dimen/_7sdp" />
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/card_user_disable"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="@dimen/_3sdp"
                card_view:cardUseCompatPadding="true">

                <com.app.rideshare.widget.TextViewRegular
                    android:id="@+id/item_user_disable"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_17sdp"
                    android:text="@string/disable"
                    android:textColor="@color/blacltext"
                    android:textSize="@dimen/_14sdp" />

                <CheckBox
                    android:id="@+id/item_disable"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:padding="@dimen/_7sdp" />
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/card_user_ap_priv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="@dimen/_3sdp"
                card_view:cardUseCompatPadding="true">

                <com.app.rideshare.widget.TextViewRegular
                    android:id="@+id/item_user_ap_priv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_17sdp"
                    android:text="@string/approve_privilege"
                    android:textColor="@color/blacltext"
                    android:textSize="@dimen/_14sdp" />

                <CheckBox
                    android:id="@+id/item_ap_priv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:padding="@dimen/_7sdp" />
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/item_btn_ad_submit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/loginbtn"
                android:text="@string/btn_submit" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>
